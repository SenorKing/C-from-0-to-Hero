#include <iostream>

using namespace std;
// HomeWork02 #2
bool checkprime(int n) {
    if (n == 0 || n == 1) {
        return false;
    }
    bool is_prime = true;
    for (int i = 2; i <= n / 2; ++i) {
        if (n % i == 0) {
            is_prime = false;
            break;
        }
    }
    return is_prime;
}
int main(){
    int n;
    cout << "Enter a Positive Integer: ";
    cin >> n;
    int zeroCount=0, oneCount=0, primedigit=0, compositedigit=0, noofDigit=0;

    if (n==0) {
        zeroCount++;
        noofDigit++;
    } else{
        while (n<0) {
            cout << "Invalid input! " << "Enter a Positive Integer: ";
            cin >> n;
        }
        int temp=n;
        while (temp!=0){
            int r=temp%10;
            if (r==0){
                zeroCount++;
            }
            else if (r==1){
                oneCount++;
            }
            else if (checkprime(r)) {
                primedigit++;
            } else
                compositedigit++;

            temp= temp/10;
            noofDigit++;
        }
    }
    cout<<"There were "<<zeroCount<<" zeros, "<<oneCount<<" ones, "
    <<primedigit<<" prime digits and "<<compositedigit<<" composite digits.";
    cout<<endl<<"The number had "<<noofDigit<<" digits.";
    return 0;
}
