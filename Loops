#include <iostream>

using namespace std;
//Loops
int main() {
                                                            
    int i = 0, n = 0;                                       // Declare a variable                                                       
    cout << "Enter a number and press Enter: ";             //Get input from keyboard and initialize i.
    cin >> n;
    i = 1;
    while (i <= n){                                         // While i less than or equal n,
        cout << i << " ";   // print i,
        i = i + 1;         // adds 1 to i.
    }
    return 0;
}
// This program, when run, counts to the specified number. For example, if the user inputs 6, the program prints the following:
1 2 3 4 5 6.
