#include <iostream>

using namespace std;
// Lab 03, Ex. 1.
int main() {
    int x, y;
    cout << "Enter a value for x: ";
    cin >> x;
    cout << "Enter a value for y: ";
    cin >> y;
    cout << "The sum of " << x << " and " << y << " is " << x + y <<endl;
    cout << y << " subtracted from " << x << " is " << x - y <<endl;
    cout << "The product of " << x << " and " << y << " is " << x * y <<endl;
    double a = x + y;
    cout << "The average of " << x << " and " << y << " is " << a/2 << endl;
    cout << "The remainder when " << x << " is divided by " << y << " is " << x % y;
    return 0;
}
// Lab 03, Ex.2. Write a program that computes and prints the area and perimeter of a 
//letter-size (8.5 x 11 inches) sheet of paper. Please do not work with numbers; work with variables.
int main() {
 double b = 8.5, h = 11;
 cout << "The area of letter-size sheet of paper is " << b * h <<endl;
 cout << "The perimeter of a letter-size sheet of paper is " << (2*b) + (2*h) << endl;
 return 0;
}

#include <iostream>

using namespace std;
// If Statement
int main() {
    int n;
    cout << "Enter an age and press ENTER: ";
    cin >> n;
    if (n > 12 && n < 20) {
        cout << "Subject is a teenager." << endl;
    } else {
        cout << "Subject is not a teenager." << endl;
}
